{% extends 'base.html.twig' %}

{% block title %}Choix machine{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt-3" style="min-height: 100vh;">
        <div class="row">
            <h1 class="text-center mb-3">A quelle cave à vin désirez-vous vous connecter ?</h1>
            {% for winegame in winegames %}
                <div class="col-lg-4 col-md-6 col-12 mb-2">
                    <div class="card h-100">
                        <div class="card-body d-grid">
                            <h5 class="card-title">{{ winegame.wineGameName }}</h5>
                            <a href="{{ url('app_setCookie', { id: winegame.id }) }}" class="btn btn-info">Choisir cette cave</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <nav class="navbar bg-dark sticky-bottom">
        <form class="container-fluid">
            <div></div>
            <a class="btn btn-outline-danger" href="{{ url('app_logout') }}">Changer de compte</a>
        </form>
    </nav>
{% endblock %}
